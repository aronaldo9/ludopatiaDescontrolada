{% extends 'base.html.twig' %}

{% block title %}Sorteo{% endblock %}

{% block body %}
    <h1>Sorteo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sorteo.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ sorteo.nombre }}</td>
            </tr>
            <tr>
                <th>FechaIni</th>
                <td>{{ sorteo.fechaIni ? sorteo.fechaIni|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Precio_papeleta</th>
                <td>{{ sorteo.precioPapeleta }}</td>
            </tr>
            <tr>
                <th>Cantidad_papeletas</th>
                <td>{{ sorteo.cantidadPapeletas }}</td>
            </tr>
            <tr>
                <th>FechaFin</th>
                <td>{{ sorteo.fechaFin ? sorteo.fechaFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NumPremiado</th>
                <td>{{ sorteo.numPremiado }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sorteo_index') }}">back to list</a>

    <a href="{{ path('app_sorteo_edit', {'id': sorteo.id}) }}">edit</a>

    <!-- Nuevo botón para generar el número ganador -->
    <form action="{{ path('app_genWinTicket', {'id': sorteo.id}) }}" method="post">
        <button type="submit">Generar Número Ganador</button>
    </form>

    {{ include('sorteo/_delete_form.html.twig') }}
{% endblock %}
